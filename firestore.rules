rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Every authenticated user can read all videos.
    // Only the user with 'admin' role can create, update, and delete videos.
    match /artifacts/{appId}/public/data/videos/{videoId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && get(/databases/$(database)/documents/artifacts/$(appId)/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Each user can read and write their own data.
    match /artifacts/{appId}/users/{userId}/{document=**} {
        allow read, write: if request.auth.uid == userId;
    }
  }
}
